/*
A data processing system classifies even and odd inputs separately.
Implement a solution to store 5 elements in an array,
compute sum of all even and sum of all odd numbers.
*/

#include <iostream>
using namespace std;

int main(){
    int array[5];
    int even = 0, odd = 0;

    cout << "Enter elements:\n";
    for (int i = 0; i < 5; i++) {
        cout << "Enter element " << i+1 << " - ";
        cin >> array[i];

        if (array[i]%2 == 0) {
            even += array[i];
        } else odd += array[i];
    }

    cout << "SUM OF EVEN ELEMENTS: " << even << '\n';
    cout << "SUM OF ODD ELEMENTS: " << odd << '\n';

    return 0;
}
