// CASHIER WANTS TO SUM 2 AMOUNTS

#include <iostream>
using namespace std;

int main(){
    float cash1, cash2;

    cout << "Enter amount number 1: ";
    cin >> cash1;
    cout << "Enter amount number 2: ";
    cin >> cash2;

    cout << "\nSum of Amount 1st & Amount 2nd is: " << (float)(cash1 + cash2) << endl;

    return 0;
}
