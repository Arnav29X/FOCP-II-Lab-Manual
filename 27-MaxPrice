/*
A supermarket software maintains item price lists.
Implement a solution to store the prices of 10
items in an array and display the maximum price.
*/

#include <iostream>
using namespace std;

int main(){
    float prices[10];

    cout << "---- ENTER PRICES ----\n";
    for (int i = 0; i < 10; i++) {
        cout << "Enter price " << i+1 << ": ";
        cin >> prices[i];
    }

    float max = prices[0];

    for (int i = 0; i < 10; i++) {
        if (prices[i] > max) {
            max = prices[i];
        }
    } cout << "\nMAX PRICE: " << max;

    return 0;
}
